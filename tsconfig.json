{
  "compilerOptions": {
    "lib": ["es2015", "es2016", "ESNext", "esnext", "dom"],
    "strict": false,
    "target": "esnext",
    "moduleResolution": "node",
    "module": "esnext",
    "declaration": true,
    "downlevelIteration": true,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "types": ["node", "vitest/globals"],
    "skipLibCheck": true,
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts",
    "src/manifest.json"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "coverage",
    "doc"
  ]
}
